{
  "name": "prestashop-starter-theme",
  "author": "Thomas L'huillier",
  "description": "Revisited Prestashop 1.7 Starter theme, with Webpack 4, full ES6 and scss tool stack, optimized production mode and more.",
  "version": "1.0.0",
  "main": "./js/theme.js",
  "scripts": {
    "build": "webpack --mode production --colors --progress -p",
    "watch": "webpack --mode development --colors --devtool source-map --hide-modules -w",
    "debug": "webpack --mode development --progress --colors --devtool source-map --debug --display-error-details --output-pathinfo --display-chunks -w"
  },
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "autoprefixer": "^9.1.5",
    "babel-loader": "^8.0.2",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^1.0.0",
    "expose-loader": "^0.7.5",
    "file-loader": "^2.0.0",
    "mini-css-extract-plugin": "^0.4.3",
    "node-sass": "^4.9.3",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "url-loader": "^1.1.1",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.0"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  }
}
